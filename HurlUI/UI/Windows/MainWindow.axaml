<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:HurlUI.UI.ViewModels"
        xmlns:views="clr-namespace:HurlUI.UI.Views"
        xmlns:controls="clr-namespace:HurlUI.UI.Controls"
        xmlns:localization="clr-namespace:HurlUI.UI.Localization;assembly=HurlUI"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
	      WindowStartupLocation="CenterScreen"
        
        Icon="/Assets/Icons/icon.ico"
        Title="HurlUI"
        x:Class="HurlUI.UI.Windows.MainWindow"
        x:Name="mainWindow"
        x:DataType="vm:MainWindowViewModel">
  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>
 
  <views:MainView Margin="{Binding #mainWindow.OffScreenMargin}"></views:MainView>
  <!--<views:LoadingView></views:LoadingView>-->
</Window>
