<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:HurlStudio.UI.Controls"
             xmlns:localization="clr-namespace:HurlStudio.UI.Localization"
             xmlns:v="clr-namespace:HurlStudio.UI.Views"
             xmlns:vm="clr-namespace:HurlStudio.UI.ViewModels.Documents"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="HurlStudio.UI.Controls.Documents.WelcomeDocument"
             x:DataType="vm:WelcomeDocumentViewModel">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static localization:Localization.Dock_Document_Welcome_Headline}"
                   VerticalAlignment="Bottom"
                   Margin="10,0,0,0"
                   Grid.ColumnSpan="2"
                   FontSize="30"
                   Opacity=".5" />

        <StackPanel Orientation="Vertical"
                    Grid.Row="2"
                    Grid.Column="0">
            <Button Classes="button"
                    Margin="10,0,10,5"
                    HorizontalContentAlignment="Left"
                    Cursor="Hand"
                    Click="On_Button_NewCollection_Click"
                    >
                <Grid HorizontalAlignment="Left"
                      Margin="0,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <c:Icon Type="Collection"
                            Grid.Column="0">
                    </c:Icon>
                    <StackPanel Orientation="Vertical"
                                Grid.Column="1">
                        <TextBlock TextWrapping="Wrap"
                                   FontWeight="Bold"
                                   Text="{x:Static localization:Localization.Dock_Document_Welcome_Actions_NewCollection_Title}" />
                        <TextBlock TextWrapping="Wrap"
                                   Text="{x:Static localization:Localization.Dock_Document_Welcome_Actions_NewCollection_Description}" />
                    </StackPanel>
                </Grid>
            </Button>
            <Button Classes="button"
                    Margin="10,0,10,5"
                    HorizontalContentAlignment="Left"
                    Cursor="Hand"
                    Click="On_Button_OpenCollection_Click">
                <Grid HorizontalAlignment="Left"
                      Margin="0,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <c:Icon Type="Open"
                            Grid.Column="0">
                    </c:Icon>
                    <StackPanel Orientation="Vertical"
                                Grid.Column="1">
                        <TextBlock TextWrapping="Wrap"
                                   FontWeight="Bold"
                                   Text="{x:Static localization:Localization.Dock_Document_Welcome_Actions_OpenCollection_Title}" />
                        <TextBlock TextWrapping="Wrap"
                                   Text="{x:Static localization:Localization.Dock_Document_Welcome_Actions_OpenCollection_Description}" />
                    </StackPanel>
                </Grid>
            </Button>
            <Button Classes="button"
                    Margin="10,0,10,5"
                    HorizontalContentAlignment="Left"
                    Cursor="Hand">
                <Grid HorizontalAlignment="Left"
                      Margin="0,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <c:Icon Type="Import"
                            Grid.Column="0">
                    </c:Icon>
                    <StackPanel Orientation="Vertical"
                                Grid.Column="1">
                        <TextBlock TextWrapping="Wrap"
                                   FontWeight="Bold"
                                   Text="{x:Static localization:Localization.Dock_Document_Welcome_Actions_ImportCollection_Title}" />
                        <TextBlock TextWrapping="Wrap"
                                   Text="{x:Static localization:Localization.Dock_Document_Welcome_Actions_ImportCollection_Description}" />
                    </StackPanel>
                </Grid>
            </Button>
        </StackPanel>

        <StackPanel Orientation="Vertical"
                    Grid.Row="2"
                    Grid.Column="1">
            <TextBlock Text="{x:Static localization:Localization.Dock_Document_Welcome_RecentFiles}"
                       Foreground="{DynamicResource NeutralControlForegroundColor}"
                       FontWeight="Bold" />
            <ItemsControl ItemsSource="{Binding EditorViewViewModel.FileHistoryEntries}" />
        </StackPanel>
    </Grid>
</UserControl>