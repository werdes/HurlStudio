<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:HurlStudio.UI.Controls;assembly=HurlStudio">
  <Design.PreviewWith>
    <Border Padding="20">
      <StackPanel>
        <c:SettingTypeContainer />
        <c:HurlFileTemplateListItem />
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->
  <Style Selector="c|SettingTypeContainer>Grid:pointerover">
    <Setter Property="Background" Value="{DynamicResource NeutralControlHoverColor}" />
  </Style>
  <Style Selector="c|HurlFileTemplateListItem>Grid:pointerover">
    <Setter Property="Background" Value="{DynamicResource NeutralControlHoverColor}" />
  </Style>
</Styles>
